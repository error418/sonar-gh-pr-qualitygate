{
  "compilerOptions": {
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*", "test/configuration.spec.ts", "test/sonar-client.spec.ts", "test/sonar-webhook.spec.ts", "test/template-engine.spec.ts", "test/app-installation-handler.spec.ts", "test/commit-status-sender.spec.ts", "test/github-webhook.spec.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts"
  ]
}