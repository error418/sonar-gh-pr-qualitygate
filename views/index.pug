extends base

block content
    div(class="container")
        div(class="row")
            div(class="col-md-9")
                div(class="jumbotron")
                    h1 Hi, there!
                    p(class="lead") Your Swingletree is ready to go.

                    hr

                    p For more information about what to do next you can take a look into the project's #[a(href="https://github.com/error418/swingletree/blob/master/README.md") Readme].

            div(class="col-md-3")
                div(class="card bg-light")
                    div(class="card-header") Service Health
                    div(class="card-body")
                        ul(class="list-unstyled")
                            li(data-toggle="tooltip" data-placement="right" title=unhealthy + " of " + connections + " failing")
                                if unhealthy > 0
                                    i(class="fas fa-database mr-2 text-danger")
                                else
                                    i(class="fas fa-database mr-2 text-success")
                                span Database
